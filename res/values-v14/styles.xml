<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="ChatRoomBaseTheme" parent="android:style/Theme.Holo.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/ChatRoom.Widget.Holo.Light.ActionBar</item>
        <item name="android:popupMenuStyle">@style/ChatRoom.Widget.Light.PopupMenu</item>
        <item name="android:actionOverflowButtonStyle">@style/ChatRoom.Widget.Light.ActionButton.Overflow</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="ChatRoomBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ChatRoom.Widget.Holo.Light.ActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="background">@android:color/white</item>
    </style>

    <style name="ChatRoom.Widget.Light.ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_moreoverflow</item>
    </style>

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ChatRoom.Widget.Light.PopupMenu" parent="android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_menu_item</item>
    </style>

</resources>