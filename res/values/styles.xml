<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="ChatRoomBaseTheme" parent="Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        --> 
         <item name="popupMenuStyle">@style/ChatRoom.Widget.Light.PopupMenu</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="ChatRoomBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="ChatRoom.Widget.Light.PopupMenu" parent="android:style/Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_menu_item</item>
    </style>

</resources>